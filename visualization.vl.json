{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "US violent crime average rate per 100,000 people (2010-2020)",
  "width": 800,
  "height": 450,
  "projection": {"type": "albersUsa"},
  "params": [
    {
      "name": "Year_selection",
      "value": 2015,
      "bind": {
        "input": "range",
        "min": 2010,
        "max": 2020,
        "step": 1,
        "name": "Year: "
      }
    }
  ],
  "data": {
    "url": "https://raw.githubusercontent.com/y-shash/US-crime-history-data-visualisation/main/filter_rate.csv"
  },
  "transform": [
    {
      "lookup": "country",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/y-shash/US-crime-history-data-visualisation/main/ne_110m.json",
          "format": {
            "type": "topojson",
            "feature": "ne_110m_admin_1_states_provinces"
          }
        },
        "key": "properties.name",
        "fields": ["total_rate", "year"]
      }
    },
    {"calculate": "datum.total_rate + 0.1", "as": "Total Rate"},
    {"filter": "datum.year == Year_selection"}
  ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "total_rate",
      "type": "quantitative",
      "scale": {"type": "log"}
    },
    "tooltip": [
      {"field": "properties.name", "type": "nominal", "title": "country"},
      {"field": "total_rate", "type": "quantitative"}
    ]
  },
  "config": {}
}